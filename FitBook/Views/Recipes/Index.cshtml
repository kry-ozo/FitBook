@model List<Recipe>

<a class="btn btn-primary" asp-controller="Recipes" asp-action="Add">Add Your Own Recipe</a>
<div class="row">


@foreach(Recipe obj in Model){
    <div class="col-4">
    <div class="card" style="width: 18rem;">
        
        <div class="card-body">
            <h5 class="card-title">@obj.Name</h5>
            <p class="card-text">@obj.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Protein: @obj.Protein g</li>
            <li class="list-group-item">Fats: @obj.Fats g</li>
            <li class="list-group-item">Carbs: @obj.Carbs g</li>
        </ul>
        <form class="card-body" method="post">
            <a asp-action="Recipe" asp-controller="Recipes" asp-route-id="@obj.Id" class="card-link">Card link</a>
            <button class="btn btn-danger" type="submit" asp-route-id="@obj.Id"> Delete</button>
        </form>
    </div>
    </div>
}

</div>

